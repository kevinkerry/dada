<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.youyisi.sports.domain.wallet.Wallet" >
	<resultMap id="walletResult" type="Wallet" >
	<id column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="total_asset" property="totalAsset" />
		<result column="principal" property="principal" />
		<result column="income" property="income" />
	</resultMap>
	<sql id="commonSelect" >
		select w.id, w.user_id, w.total_asset, w.principal, w.income
		from dada_sports.wallet w
	</sql>
	<select id="getById" resultMap="walletResult" parameterType="java.lang.Long" >
		<include refid="commonSelect"/>
		where w.id = #{id}
	</select>
	<select id="getByUserId" resultMap="walletResult" parameterType="java.lang.Long" >
		<include refid="commonSelect"/>
		where w.user_id = #{userId}
	</select>
	
	<select id="queryPage" resultMap="walletResult">
		<include refid="commonSelect"/>
		order by w.id asc
	</select>
	<delete id="delete" parameterType="Wallet" >
		delete from dada_sports.wallet
		where id = #{id}
	</delete>
	<insert id="save" parameterType="Wallet" >
		insert into dada_sports.wallet (id,user_id,total_asset,principal,income
		)
 		values (#{id},#{userId},#{totalAsset},#{principal},#{income}
		)
			<selectKey keyProperty="id" resultType="Long" statementType="PREPARED">
			select LAST_INSERT_ID() as value
		</selectKey>
	</insert>
	<update id="update" parameterType="Wallet" >
		update dada_sports.wallet set user_id=#{userId},total_asset=#{totalAsset},principal=#{principal},income=#{income}
		where id = #{id}
</update>
<update id="updateByVersion" parameterType="WalletWithVersion" >
		update dada_sports.wallet set user_id=#{userId},total_asset=#{totalAsset},principal=#{principal},income=#{income}
		where id = #{id} and total_asset=#{version}
</update>

</mapper>
