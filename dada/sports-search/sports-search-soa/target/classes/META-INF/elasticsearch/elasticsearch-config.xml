<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:lang="http://www.springframework.org/schema/lang" xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd        
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd">


	
	<bean id="transportClient" 
		class="com.youyisi.soa.infrastructure.search.client.TransportClientFactoryBean"
		p:settings="classpath:/META-INF/elasticsearch/elasticsearch.properties">
		<property name="transportAddresses">
			<util:map>
			<entry key="10.1.80.200" value="9300" />
			</util:map>
		</property>
	</bean> 

</beans>
